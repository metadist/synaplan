# Synaplan Demo Recording Configuration
# Copy to .env and fill in values

# Target Synaplan instance URL
SYNAPLAN_URL=https://demo.synaplan.com

# Demo account credentials (use a dedicated demo account â€” never real credentials!)
DEMO_EMAIL=demo@synaplan.com
DEMO_PASSWORD=demo

# Pacing: milliseconds added between every Playwright action (slowMo)
# Higher = slower/easier to follow, lower = faster recording
STEP_DELAY=1500

# Pacing: milliseconds to pause after each scripted action (login, click, type)
ACTION_PAUSE=2000

# TTS Narration (requires synaplan-tts running)
TTS_URL=http://127.0.0.1:10200
TTS_VOICE=en_US-lessac-medium
TTS_SPEED=1.0
