# Test environment configuration
APP_ENV=test
APP_SECRET=test_secret_change_me_in_production

# Database for tests (use different DB than dev)
DATABASE_URL=mysql://synaplan_user:synaplan_password@mariadb:3306/synaplan_test?serverVersion=11.8

# Redis for tests
REDIS_URL=redis://redis:6379/1
MESSENGER_TRANSPORT_DSN=redis://redis:6379/1/messages

# Mailer: Use null transport (no emails sent in tests)
MAILER_DSN=null://null
APP_SENDER_EMAIL=test@synaplan.com
APP_SENDER_NAME="Synaplan Test"
APP_URL=http://localhost
FRONTEND_URL=http://localhost:5173

# JWT (use same keys as dev for simplicity)
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=synaplan

# AI Providers: Use TestProvider by default
AI_DEFAULT_PROVIDER=test
AI_TEST_ENABLED=true

# Disable external API calls in tests
ANTHROPIC_API_KEY=test_key
OPENAI_API_KEY=test_key
OLLAMA_BASE_URL=http://localhost:11434
