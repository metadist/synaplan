.PHONY: test install build dev clean

# Run tests
test:
	npm run test

# Install dependencies
install:
	npm ci

# Build for production
build:
	npm run build

# Build widget
build-widget:
	npm run build:widget

# Start development server
dev:
	npm run dev

# Type check
check-types:
	npm run check:types

# Clean build artifacts
clean:
	rm -rf dist dist-widget node_modules
