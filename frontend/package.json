{
  "name": "vite-vue-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run check:types && vite build",
    "build:widget": "vite build --config vite.config.widget.ts",
    "check:types": "vue-tsc -b --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:codegen": "playwright codegen --color-scheme dark",
    "test:e2e:report": "playwright show-report tests/e2e/reports/html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "generate:schemas": "node scripts/generate-schemas.js"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@iconify/vue": "^5.0.0",
    "chart.js": "^4.5.1",
    "highlight.js": "^11.11.1",
    "pinia": "^3.0.3",
    "vue": "^3.4.38",
    "vue-chartjs": "^5.3.3",
    "vue-i18n": "^11.1.12",
    "vue-recaptcha-v3": "^2.0.1",
    "vue-router": "^4.5.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitest/ui": "^1.6.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "happy-dom": "^14.12.0",
    "openapi-zod-client": "^1.18.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.14",
    "terser": "^5.44.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.1.4"
  }
}
