{
  "name": "sortx",
  "version": "1.0.0",
  "displayName": "SortX Document Classification",
  "description": "AI-powered document classification plugin for local file sorting",
  "author": "Synaplan",
  "homepage": "https://github.com/synaplan/synaplan-sortx",
  "license": "MIT",
  "minSynaplanVersion": "1.0.0",
  "capabilities": ["api", "frontend", "migrations"],
  "routes": [
    {
      "path": "/classify",
      "method": "POST",
      "description": "Classify document text using AI"
    },
    {
      "path": "/analyze-file",
      "method": "POST",
      "description": "Full file analysis with vision models"
    },
    {
      "path": "/categories",
      "method": "GET",
      "description": "Get available classification categories"
    }
  ],
  "config": {
    "group": "P_sortx",
    "settings": [
      {
        "key": "enabled",
        "type": "boolean",
        "default": true,
        "description": "Enable SortX API for this user"
      },
      {
        "key": "max_file_size_mb",
        "type": "integer",
        "default": 50,
        "description": "Maximum file size for analysis"
      }
    ]
  }
}
